<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDCC1A"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/compartir"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="181dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/boton"
        android:textSize="16sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/compartir_texto"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="181dp"
        android:layout_height="86dp"
        android:fontFamily="@font/roboto"
        android:text="@string/comp_text"
        android:textSize="16sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/compartir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <Button
        android:id="@+id/compartir_multi"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="181dp"
        android:layout_height="86dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/roboto"
        android:text="@string/comp_multi"
        android:textSize="16sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compartir"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>